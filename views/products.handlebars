<h2>Productos</h2>
<br>

<table id="productos" class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Code</th>
        <th>Price</th>
        <th>Status</th>
        <th>Stock</th>
        <th>Category</th>
        <th>Acciones</th>
    </tr>
    {{#each products}}
        <tr data-product-id= {{this._id}}> 
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td>{{this.price}}</td>
            <td>{{this.status}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>
            <td>
                {{!-- <a href="products/{{this._id}}">Ver Detalles</a> --}}
                <button onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
                
            </td>
        </tr>
    {{/each}}
</table>






